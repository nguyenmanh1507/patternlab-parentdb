<div class="container py-xl">
  <div id="landing-page-form"></div>
  <form action="/" class="form">
    <h3 class="mb-lg text-center">Request a school</h3>
    <div class="row">

      <div class="col">
        <label for="state" class="text-small mb-md mb-md">State
          <span class="text-color-danger">*</span>
        </label>
        <select name="state" id="state" class="form__control">
          <option value="" hidden="hidden">Select your state</option>
          <option value="1">1</option>
          <option value="1">1</option>
          <option value="1">1</option>
          <option value="1">1</option>
        </select>
      </div>

      <div class="col">
        <label for="city" class="text-small mb-md">City
          <span class="text-color-danger">*</span>
        </label>
        <select name="city" id="city" class="form__control">
          <option value="" hidden="hidden">Select your city</option>
          <option value="1">1</option>
          <option value="1">1</option>
          <option value="1">1</option>
          <option value="1">1</option>
        </select>
      </div>

      <div class="col">
        <label for="school" class="text-small mb-md">School
          <span class="text-color-danger">*</span>
        </label>
        <input type="text" class="form__control" placeholder="Type your school name">
      </div>
    </div>

    <div class="row mt-lg">

      <div class="col">
        <label for="firstname" class="text-small mb-md">First name
          <span class="text-color-danger">*</span>
        </label>
        <input type="text" id="firstname" class="form__control" placeholder="e.g. Emma">
      </div>

      <div class="col">
        <label for="lastname" class="text-small mb-md">Last name
          <span class="text-color-danger">*</span>
        </label>
        <input type="text" id="lastname" class="form__control" placeholder="e.g. Wastson">
      </div>

      <div class="col">
        <label for="email" class="text-small mb-md">Email
          <span class="text-color-danger">*</span>
        </label>
        <input type="text" id="email" class="form__control" placeholder="e.g. emmawastson@email.com">
      </div>

    </div>

    <div class="row mt-lg">
      <div class="col"></div>
      <div class="col text-center">
        <button class="btn btn--mario btn--block text-uppercase" type="submit">Send request</button>
      </div>
      <div class="col"></div>
    </div>
  </form>
</div>

